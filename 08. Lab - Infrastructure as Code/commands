# initialize the directory
terraform init

# format and validate the configuration
terraform fmt
terraform validate

# create infrastructure
terraform apply
# enter "yes" as value

# check if it works
http://localhost:8000

# how to inspect it
terraform show

# if you want to change something, all the data is in the terraform.tfstate file but better don't do that
# for example change the port from 8000 to 5000 in the .tf file
# apply
terraform apply
# yes
# check if it works
http://localhost:5000

# destroy the configuration
terraform destroy
# yes